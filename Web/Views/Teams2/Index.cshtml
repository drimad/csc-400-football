<h1>List of Teams</h1>
<p>
    <a class="btn btn-success" asp-controller="Teams2" asp-action="Add" role="button">Add Team</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Location</th>
        <th scope="col">Number of Players</th>
        <th scope="col">Income</th>
    </tr>
    </thead>
    <tbody class="table-group-divider">
    @for (var i = 0; i < ViewBag.Teams.Count; i++)
    {
        <tr>
            <td>@ViewBag.Teams[i]</td>
            <td>@ViewBag.Teams[i]</td>
            <td>@ViewBag.Teams[i]</td>
            <td>@ViewBag.Teams[i]</td>
            <td>@ViewBag.Teams[i]</td>
            <td>
                <a asp-controller="Teams" asp-action="Delete" asp-route-id="@i">
                    <i class="bi bi-trash"></i>
                </a>&nbsp;&nbsp;
                <a asp-controller="Teams" asp-action="Edit" asp-route-id="@i">
                    <i class="bi bi-pen"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>